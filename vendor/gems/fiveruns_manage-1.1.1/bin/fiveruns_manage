#!/usr/bin/env ruby

require 'fileutils'
require File.dirname(__FILE__) << "/../lib/fiveruns/manage/version"

# For older Rails versions
# USAGE: fiveruns_manage [RAILS_ROOT]
plugin_dir = File.join(ARGV[0] || Dir.pwd, 'vendor/plugins')
unless File.directory?(plugin_dir)
  abort "FiveRuns Manage: #{plugin_dir} does not exist; cannot install plugin"
end

FileUtils.rm_rf File.join(plugin_dir, 'fiveruns_manage') rescue nil

File.readlines(File.dirname(__FILE__) << "/../Manifest").each do |line|
  stub = line.strip
  origin = File.dirname(__FILE__) << "/../#{stub}"
  next if origin =~ /\/fiveruns_manage$/
  if File.file?(origin)
    destination = File.join(plugin_dir, 'fiveruns_manage', stub)
    FileUtils.mkdir_p File.dirname(destination)
    FileUtils.cp origin, destination
  end
end

STDERR.puts "Installed FiveRuns Manage (#{Fiveruns::Manage::Version::STRING}) in vendor/plugins/fiveruns_manage"