load File.join(RAILS_ROOT, 'test', 'selenium_helper.rb')

setup :fixtures => [:users, :tags]
login
open "/tags"
store_element_position_left "css=div.slider_handle", "initialPosition"
mouse_down "css=div.slider_handle"
