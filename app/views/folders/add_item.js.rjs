if @tag
  page["#{dom_id(@folder)}_tag_items"].insertInOrder '.name@data-sort', tag_filter_control(@tag, :remove => @folder), @tag.sort_name
  page << "itemBrowser.bindTagFilterEvents($('#{dom_id(@folder)}_tag_items').down('.#{dom_id(@tag)}'));"
elsif @feed
  page["#{dom_id(@folder)}_feed_items"].insertInOrder '.name@data-sort', feed_filter_control(@feed, :remove => @folder), @feed.sort_title
  page << "itemBrowser.bindFeedFilterEvents($('#{dom_id(@folder)}_feed_items').down('.#{dom_id(@feed)}'));"
end
page << "itemBrowser.styleFilters();"