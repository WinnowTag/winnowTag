<% if current_user -%>
  <div id="navigation" class="navigation clearfix">
  	<ul class="extra">
      <li><%= t("winnow.navigation.logged_in_as") %> <%=h current_user.login %></li>
      <li><%= link_to(t("winnow.navigation.profile"), edit_account_path(current_user)) %></li>
      <li><%= link_to(t("winnow.navigation.logout"), logout_path) %></li>
      <li><%= link_to(t("winnow.navigation.about"), about_path) %></li>
      <li id="feedback"><%= link_to(t("winnow.navigation.leave_feedback"), new_feedback_path) %></li>
    </ul>

  	<ul class="main clearfix">
      <li><%= link_to(t("winnow.navigation.winnow_info"), info_path, :class => tab_selected('about', "info"), :title => "Tooltip test!") %></li>
      <li><%= link_to(t("winnow.navigation.items"), feed_items_path, :class => tab_selected('feed_items')) %></li>
  	  <li><%= link_to(t("winnow.navigation.my_tags"), tags_path, :class => tab_selected('tags', 'index')) %></li>
  	  <li><%= link_to(t("winnow.navigation.public_tags"), public_tags_path, :class => tab_selected('tags', 'public')) %></li>
      <li><%= link_to(t("winnow.navigation.feeds"), feeds_path, :class => tab_selected('feeds')) %></li>
      <% if is_admin? -%>
        <li><%= link_to(t("winnow.navigation.admin"), admin_path, :class => tab_selected('admin')) %></li>
      <% end -%>
      <% if help_path -%>
        <li><%= link_to(t("winnow.navigation.help"), help_path, :target => "_blank", :class => "help") %></li>
      <% end -%>
  	</ul>
	</div>
<% else -%>
  <div id="navigation" class="navigation clearfix">
  	<ul class="extra">
      <li><%= link_to "Login", login_path %></li>
      <li><%= link_to(t(:about), about_path) %></li>
    </ul>

  	<ul class="main clearfix">
      <li><%= link_to(t(:winnow_info), info_path, :class => tab_selected('about', "info")) %></li>
      <% if help_path -%>
        <li><%= link_to(t(:help), help_path, :target => "_blank", :class => "help") %></li>
      <% end -%>
  	</ul>
	</div>
<% end -%>