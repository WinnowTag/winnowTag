<% content_for :head do -%>
  <% javascript_tag do -%>
		var itemBrowser;
		document.observe('dom:loaded', function() {
			itemBrowser = new TagsItemBrowser('tags', 'content', { orders: {
			  asc:       ["name", "state", "comments_count", "positive_count", "negative_count", "classifier_count"],
			  desc:      ["last_classified", "last_trained"],
			  "default": "name"
			}, url: "tags/public"});
		});
  <% end -%>
<% end -%>

<% content_for :header_controls do -%>
  <%= render :partial => 'header_controls' %>
<% end -%>
