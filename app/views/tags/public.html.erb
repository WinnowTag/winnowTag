<% content_for :head do -%>
	<script type="text/javascript" charset="utf-8">
		var itemBrowser;
		document.observe('dom:loaded', function() {
			itemBrowser = new ItemBrowser('tags', { orders: {
			  asc:       ["name", "state", "positive_count", "negative_count", "classifier_count", "globally_exclude", "subscribe"],
			  desc:      ["last_used_by"],
			  "default": "name"
			}, url: "tags/public"});
		});
	</script>
<% end -%>

<% content_for :header_controls do -%>
  <%= render :partial => 'header_controls' %>
<% end -%>

<div id="tags"></div>

<% content_for :footer do -%>
	<span id="tags_indicator" class="loading" style="display:none;"></span>
	<span id="tags_count" class="count"></span>
<% end -%>
