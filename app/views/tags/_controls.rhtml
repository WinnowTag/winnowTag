<%= link_to image_tag('copy.gif'), hash_for_tags_path(:copy => tag), :method => 'post', :title => "Copy #{tag.name}" %>
<%= link_to image_tag('trash.gif'), {:action => 'destroy', :id => tag}, 
			:method => 'delete', :title => "Destroy #{tag.name}",
			:confirm => "Do you really want to delete #{tag.name}?\n\nThis can't be undone." %>
<% unless tag.public? -%>
  <%= link_to_remote image_tag('globe.gif'), { :url => publicize_tag_path(tag), :method => 'put' }, :title => "Publish #{tag.name}" %>
<% end -%>