<div class="summary clearfix" onclick="$(this).next('.extended').toggle(); <%= bias_slider_js(tag, :disabled => !editable) %> this.up('.tag').down('.extended .comments').load();">
  <div class="info">      
    <div class="details">
      <p><%=h tag.user_login %></p>
      <strong class="state"><%= tag_state(tag) %></strong>
    </div>
    <div class="comments">
      <p><%= _(:comments) %></p>  
      <strong><%= tag.comments_count %></strong>
    </div>
    <div class="positive">
      <p><%= _(:positive) %></p>
      <strong><%= tag.positive_count %></strong>
    </div>
    <div class="negative">
      <p><%= _(:negative) %></p>
      <strong><%= tag.negative_count %></strong>
    </div>
    <div class="automatic">
      <p><%= _(:automatic_label) %></p>
      <strong><%= tag.classifier_count %></strong>
    </div>
    <div class="date">
       <p><%= _(:tags_last_trained) %></p> 
       <strong><%= format_date(tag.last_trained) %></strong>
    </div>
  </div>
      
  <% if local_assigns[:editable] %>
    <h4>
      <span id="<%= dom_id(tag, 'name') %>" class="name"><%=h tag.name %></span>
      <%= in_place_editor(dom_id(tag, "name"), :url => tag_path(tag), :options => "{method: 'put'}", :param_name => "tag[name]",
            :click_to_edit_text => _(:tags_click_to_edit_tag_text), :save_text => _(:tags_save_text), :html_response => false) %>
    </h4>

    <div class="description">
      <span id="<%= dom_id(tag, 'comment') %>"><%= tag.comment.blank? ? _(:tags_blank_comment) : h(tag.comment) %></span>
      <%= in_place_editor(dom_id(tag, "comment"), :url => tag_path(tag), :options => "{method: 'put'}", :param_name => "tag[comment]",
            :click_to_edit_text => _(:tags_click_to_edit_comment_text), :save_text => _(:tags_save_text), :rows => 5, :cols => 50) %>
    </div>
  <% else %>
    <h4 class="name"><%=h tag.name %></h4>

    <div class="description">
      <%=h tag.comment %>
    </div>
  <% end %>
</div>