<div class="summary clearfix">
  <div class="info">      
    <div class="details">
      <p><%=h tag.user_login %></p>
      <strong class="state"><%= tag_state(tag) %></strong>
    </div>
    <div class="comments">
      <p><%= t(:tags_comments) %></p>  
      <strong>
        <span class="unread_comments"><%= tag.comments.unread(current_user).count %></span> / <span class="total_comments"><%= tag.comments_count %></span>
      </strong>
    </div>
    <div class="positive">
      <p><%= t(:tags_positive) %></p>
      <strong><%= tag.positive_count %></strong>
    </div>
    <div class="negative">
      <p><%= t(:tags_negative) %></p>
      <strong><%= tag.negative_count %></strong>
    </div>
    <div class="automatic">
      <p><%= t(:tags_automatic) %></p>
      <strong><%= tag.classifier_count %></strong>
    </div>
    <div class="date">
       <p><%= t(:tags_last_classified) %></p> 
       <strong><%= format_date(tag.last_classified_at) %></strong>
    </div>
    <div class="date">
       <p><%= t(:tags_last_trained) %></p> 
       <strong><%= format_date(tag.last_trained) %></strong>
    </div>
  </div>
      
  <% if local_assigns[:editable] %>
    <h4>
      <span id="<%= dom_id(tag, 'name') %>" class="name"><%=h tag.name %></span>
      <%= in_place_editor(dom_id(tag, "name"), :url => tag_path(tag), :options => "{method: 'put'}", :param_name => "tag[name]",
            :click_to_edit_text => t(:tags_click_to_edit_tag_text), :save_text => t(:tags_save_text), :html_response => false) %>
    </h4>

    <div class="description <%= 'empty' if tag.description.blank? %>">
      <span id="<%= dom_id(tag, 'description') %>"><%= tag.description.blank? ? t(:tags_blank_description) : h(tag.description) %></span>
      <%= in_place_editor(dom_id(tag, "description"), :url => tag_path(tag), :options => "{method: 'put'}", :param_name => "tag[description]",
            :click_to_edit_text => t(:tags_click_to_edit_description_text), :save_text => t(:tags_save_text), :rows => 5, :cols => 50) %>
    </div>
  <% else %>
    <h4 class="name"><%=h tag.name %></h4>

    <div class="description">
      <%=h tag.description %>
    </div>
  <% end %>
</div>