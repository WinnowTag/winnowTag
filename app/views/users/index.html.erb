<% content_for :head do -%>
  <% javascript_tag do -%>
    var itemBrowser;
    document.observe('dom:loaded', function() {
      Content.setup();
      itemBrowser = new ItemBrowser('users', 'content', { orders: {
        asc:       ["login", "name", "email"],
        desc:      ["tag_count", "logged_in_at", "last_accessed_at", "last_tagging_on"],
        "default": "login"
      }});
    });
  <% end -%>
<% end -%>

<% content_for :header_controls do -%>
  <%= render :partial => 'header_controls' %>
<% end -%>
