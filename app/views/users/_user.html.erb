<div id="user_<%= user.id %>" class="user clearfix">
  <% unless user == current_user -%>
  <ul class="controls">
    <li><%= link_to t(:login_label), login_as_user_url(user), :class => :login, :method => :post, :confirm => t(:users_login_confirm, :login => user.login) %></li>
    <li><%= link_to t(:destroy), user_url(user), :class => :destroy, :method => :delete, :confirm => t(:users_destroy_confirm, :login => user.login) %></li>
  </ul>
  <% end -%>

  <h4><%=h user.login %></h4>

  <div class="clearfix">
    <dl class="account_detail">
      <dt><%= t(:users_full_name) %></dt>
  		<dd><%=h user.full_name %></dd>
      <dt><%= t(:email) %></dt>
  		<dd><%=h user.email %></dd>
    </dl>
    <dl class="login_detail">
		  <dt><%= t(:users_registered) %></dt>
		  <dd><%= format_date(user.created_at) %></dd>
      <dt><%= t(:users_last_logged_in) %></dt>
      <dd><%= format_date(user.logged_in_at) %></dd>
      <dt><%= t(:users_last_accessed) %></dt>
      <dd><%= format_date(user.last_accessed_at) %></dd>
    </dl>
    <dl class="tag_detail">
      <dt><%= t(:users_last_trained) %></dt>
      <dd><%= format_date(user.last_tagging_on) %></dd>
      <dt><%= t(:users_number_of_tags) %></dt>
      <dd><%= user.tag_count %></dd>
		  <dt><%= t(:users_average_tags_per_item) %></dt>
		  <dd><%= user.average_taggings_per_item %></dd>
		  <dt><%= t(:users_percentage_tagged) %></dt>
		  <dd class="last"><%= number_to_percentage user.tagging_percentage %></dd>
    </dl>
  </div>
</div>
