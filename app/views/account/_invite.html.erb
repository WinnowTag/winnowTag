<div id="invite_form" class="form" style="display: none;">
  <% form_for :invite, :url => signup_invite_path do |f| -%>
    <div class="title">
      <span class="login"><%= link_to_function _(:login_header), "$('invite_form').hide(); $('login_form').show();" %></span>        
      <span class="invitation"><%= _(:invite_header) %></span>
    </div>

    <div class="content" class="clearfix">
      <%= error_messages_for :invite %>

      <div class="email">
        <%= f.label :email, _(:email_label) %>
        <%= f.text_field :email %>
      </div>

      <p class="description"><%= _(:questions_description) %></p>
      <h4><%= _(:questions_header) %></h4>

      <div>
        <%= f.label :hear, _(:hear_question) %>
        <%= f.text_area :hear %>
      </div>

      <div>
        <%= f.label :use, _(:use_question) %>
        <%= f.text_area :use %>
      </div>

      <div class="submit">
        <%= submit_tag _(:invite_submit_button) %>
      </div>
    </div>
  <% end -%>
</div>