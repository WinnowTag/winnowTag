<% form_tag :action => "activate" do -%>
  <p>
    <label for="activation_code"><%= t("winnow.activation.activation_code") %></label><br/>
    <%= text_field_tag(:activation_code, params[:activation_code], :size => 50) %>
  </p>
  
  <p>
    <%= submit_tag t("winnow.activation.activate") %>
  </p>
<% end -%>