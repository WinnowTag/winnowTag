<div id="signup_form" class="form">
<% form_for :user, :url => signup_path do |f| -%>
  <div class="title">
    <span class="signup">Signup</span>
    <span class="login"><%= link_to t("winnow.general.login"), login_path %></span>              
  </div>

  <div class="content">
    <%= error_messages_for :user %>
    <%= hidden_field_tag :invite, @invite.code %>

    <div class="clearfix">
      <div class="login">
        <label for="login"><%= t("winnow.general.login") %></label>
        <%= f.text_field :login %>
      </div>

      <div class="password">
        <label for="password"><%= t("winnow.general.password") %></label>
        <%= f.password_field :password %>
      </div>
    </div>
    
    <div class="clearfix">
      <div class="email">
        <label for="email"><%= t("winnow.general.email") %></label>
        <%= f.text_field :email, :value => @invite.email %>
      </div>

      <div clas="password_confirmation">
        <label for="password_confirmation"><%= t("winnow.general.password_confirmation") %></label>
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
    
    <div class="submit">
      <%= submit_tag t("winnow.login.signup_submit") %>
    </div>
  </div>
<% end -%>
</div>