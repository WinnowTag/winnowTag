<div id="signup_form" class="form">
<% form_for :user, :url => signup_path do |f| -%>
  <div class="title">
    <span class="signup">Signup</span>
    <span class="login"><%= link_to t(:login_header), login_path %></span>              
  </div>

  <div class="content">
    <%= error_messages_for :user %>
    <%= hidden_field_tag :invite, @invite.code %>

    <div class="clearfix">
      <div class="login">
        <label for="login"><%= t(:login_label) %></label>
        <%= f.text_field :login %>
      </div>

      <div class="password">
        <label for="password"><%= t(:password_label) %></label>
        <%= f.password_field :password %>
      </div>
    </div>
    
    <div class="clearfix">
      <div class="email">
        <label for="email"><%= t(:email_label) %></label>
        <%= f.text_field :email, :value => @invite.email %>
      </div>

      <div clas="password_confirmation">
        <label for="password_confirmation"><%= t(:password_confirmation_label) %></label>
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
    
    <div class="submit">
      <%= submit_tag t(:signup_submit_button) %>
    </div>
  </div>
<% end -%>
</div>