<%= error_messages_for :current_user %>

<% form_for :current_user do |f| %>
  <fieldset class="profile">
  	<legend><%= t("winnow.profile.header") %></legend>
  	
  	<p>
  	  <%= f.label :email, t("winnow.general.email") %>
  	  <%= f.text_field :email %>
  	</p>
  	<p>
  	  <%= f.label :firstname, t("winnow.profile.first_name") %>
  	  <%= f.text_field :firstname %>
  	</p>
  	<p>
  	  <%= f.label :lastname, t("winnow.profile.last_name") %>
  	  <%= f.text_field :lastname %>
  	</p>
  	<p>
      <%= f.label :time_zone, t("winnow.profile.time_zone") %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, :model => ActiveSupport::TimeZone, :include_blank => true %>
  	</p>
  	<p>
  	  <%= submit_tag t("winnow.general.save") %>
  	</p>
  </fieldset>
<% end %>

<% form_for :current_user do |f| %>
  <fieldset class="profile">
  	<legend><%= t("winnow.profile.password.header") %></legend>

  	<p>
  	  <%= f.label :current_password, t("winnow.profile.password.current") %>
  	  <%= f.password_field :current_password %>
  	</p>
  	<p>
  	  <%= f.label :password, t("winnow.profile.password.new") %>
  	  <%= f.password_field :password %>
  	</p>
  	<p>
  	  <%= f.label :password_confirmation, t("winnow.profile.password.new_confirmation") %>
  	  <%= f.password_field :password_confirmation %>
  	</p>
  	<p>
  	  <%= submit_tag t("winnow.general.save") %>
  	</p>
  </fieldset>
<% end %>
