<%= error_messages_for 'current_user' %>

<% form_for :current_user do |f| %>
  <fieldset>
  	<legend><%= _(:edit_profile_header) %></legend>
  	
  	<p>
  	  <%= f.label :login, _(:login_label) %>
  	  <%= f.text_field :login, :readonly => true %>
  	</p>
  	<p>
  	  <%= f.label :password, _(:password_label) %>
  	  <%= f.password_field :password %>
  	</p>
  	<p>
  	  <%= f.label :password_confirmation, _(:password_confirmation_label) %>
  	  <%= f.password_field :password_confirmation %>
  	</p>
  	<p>
  	  <%= f.label :email, _(:email_label) %>
  	  <%= f.text_field :email %>
  	</p>
  	<p>
  	  <%= f.label :firstname, _(:firstname_label) %>
  	  <%= f.text_field :firstname %>
  	</p>
  	<p>
  	  <%= f.label :lastname, _(:lastname_label) %>
  	  <%= f.text_field :lastname %>
  	</p>
  	<p>
      <%= f.label :time_zone, _(:time_zone_label) %>
  	  <%= f.time_zone_select :time_zone, TZInfo::Timezone.all.sort, :model => TZInfo::Timezone %>
  	</p>
  	<p>
  	  <label>&nbsp;</label>
  	  <%= submit_tag _(:edit_profile_submit_button) %>
  	</p>
  </fieldset>
<% end%>
