<% content_for :body, "login" %>

<% content_for :head do -%>
  <% javascript_tag do -%>
    document.observe("dom:loaded", function() {
      $('login_form').down('input#login').focus();
    });
  <% end -%>
<% end -%>

<div class="container">
  <div class="welcome">
    <h2><%= _(:welcome_header) %></h2>

    <%= _(:welcome_text) %>    
  </div>
  
  <% if @invite and @invite.code? -%>
    <%= render :partial => "signup", :object => @invite %>
    
  <% else -%>
    <%= render :partial => "login" %>
    <%= render :partial => "reminder" %>
    <%= render :partial => "invite" %>
  <% end -%>
</div>