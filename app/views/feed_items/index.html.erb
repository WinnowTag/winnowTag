<% content_for :body, "feed_items" %>

<% content_for :head do -%>
	<% javascript_tag do -%>
		var itemBrowser;
		document.observe('dom:loaded', function() {
			itemBrowser = new FeedItemsItemBrowser('feed_items', 'content', { 
			  modes: ["unread", "all", "trained"],
			  orders: {
			    desc:      ["date", "strength"],
			    "default": "date"
			  }
			});

      new Sidebar(<%= sidebar_feed_items_path.to_json %>, itemBrowser.filters, function() {
        itemBrowser.styleFilters();
        itemBrowser.bindTagFiltersEvents();
        itemBrowser.bindFeedFiltersEvents();
        
        $$("#sidebar .section").each(function(element) {
          new SidebarSection(element);
        });
      });
      
      new Classification(<%= classifier_path.to_json %>, <%= current_user.changed_tags.any?.to_json %>);
		});
  <% end -%>
<% end -%>

<% content_for :header_controls do -%>
  <% form_tag feed_items_path, :id => "text_filter_form", :onsubmit => "return false;" do -%>
    <%= text_field_tag "text_filter", params[:text_filter], :placeholder => t("winnow.items.header.feed_items_search_placeholder") %>
  <% end -%>

  <div class="order clearfix">
    <label><%= t("winnow.general.sort_label") %></label>        
    <select id="order">
      <option value="date"><%= t("winnow.items.header.sort_date_label") %></option>
      <option value="strength"><%= t("winnow.items.header.sort_strength_label") %></option>
    </select>
    <%= direction_link %>
  </div>

  <div class="toolbar right">
    <div class="group">
      <label><%= t("winnow.items.header.selected_filters") %></label>
      <%= rounded_button_function t("winnow.items.header.clear_selected_filters"), "", :icon => "clear", :id => "clear_selected_filters", :class => "first" %>
      <%= rounded_button_link t("winnow.items.header.feed_for_selected_filters"), "", :icon => "feed", :base_url => formatted_feed_items_path(:atom), :id => "feed_with_selected_filters" %>
    </div>
    
    <div class="group">
      <label><%= t("winnow.items.header.show_label") %></label>        
      <%= rounded_button_function t("winnow.items.header.show_all_label"),     "", :icon => "all",     :id => "mode_all", :class => "first" %>
      <%= rounded_button_function t("winnow.items.header.show_unread_label"),  "", :icon => "unread",  :id => "mode_unread" %>
      <%= rounded_button_function t("winnow.items.header.show_trained_label"), "", :icon => "trained", :id => "mode_trained" %>
    </div>
  </div>
<% end -%>

<% content_for :sidebar, "" %>

<% content_for :footer do -%>	
  <div class="toolbar">
    <div class="group">
      <%= rounded_button_function t("winnow.items.footer.previous_item"), "", :icon => "previous" %>  
      <%= rounded_button_function t("winnow.items.footer.next_item"),     "", :icon => "next" %>
    </div>
  
    <%= rounded_button_function t("winnow.items.footer.mark_all_read"),   "", :icon => "read" %>
  </div>
	
	<%= render :partial => "classification_controls" %>
<% end -%>