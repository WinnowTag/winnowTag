<div class="folder closed" id="<%= dom_id(folder) %>">
  <ul class="actions">
    <li><%= link_to_remote "Rename", :url => folder_path(folder), :method => :put, :with => %w|'folder[name]=' + name|, :condition => %W|name = prompt("Name?", $(this).up('.folder').down('.name').innerHTML)|, :html => { :class => "edit" } %></li>
    <li><%= link_to_remote "Destroy", :url => folder_path(folder), :method => :delete, :confirm => "Are you sure?", :html => { :class => "destroy" } %></li>
  </ul>
  <div class="name" onclick="$(this).up('.folder').toggleClassName('open');"><%= folder.name %></div>
  <div class="items">
    These are my items
  </div>
</div>