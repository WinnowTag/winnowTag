<% if ['production', 'trunk'].include? RAILS_ENV -%>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', '<%= ENV['GOOGLE_ANALYTICS_UA'] %>' ]);

    <% if RAILS_ENV == 'production' -%>
      <%# Track doc.winnowtag.org and winnowtag.org in a single GA profile. %>
      _gaq.push(['_setDomainName', '.winnowtag.org']);
      _gaq.push(['_setAllowHash', false]);
    <% end -%>

    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
<% end -%>

<script type="text/javascript">
  var _gap = new GoogleAnalyticsProxy();
</script>
