<div class="message clearfix">
	<ul class="controls">
    <li><%= link_to t("winnow.general.edit"), edit_message_path(message), :class => :edit, :title => t("winnow.general.edit_tooltip") %></li>
    <li><%= link_to t("winnow.general.destroy"), message, :confirm => t("winnow.general.are_you_sure"), :method => :delete, :class => :destroy, :title => t("winnow.general.destroy_tooltip") %></li>    
	</ul>
	
  <span class="date"><%= format_date message.created_at %></span>
  <span class="body"><%=sth message.body %></span>
</div>