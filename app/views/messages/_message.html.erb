<div class="message clearfix">
	<ul class="controls">
    <li><%= link_to _(:edit), edit_message_path(message), :class => :edit_icon %></li>
    <li><%= link_to _(:destroy), message, :confirm => _(:are_you_sure), :method => :delete, :class => :destroy_icon %></li>    
	</ul>
	
  <span class="date"><%= format_date message.created_at %></span>
  <span class="body"><%= textilize message.body %></span>
</div>