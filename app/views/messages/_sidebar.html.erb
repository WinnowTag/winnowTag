<div class="messages">
  <h3><%= t("winnow.messages.sidebar.messages") %></h3>
  <div class="content">
    <% if messages.blank? -%>
      <span class="empty"><%= t("winnow.messages.sidebar.empty") %></span>
    <% else -%>
      <ul>
        <%= render :partial => "messages/sidebar_message", :collection => messages %>
      </ul>
    <% end -%>
  </div>
</div>
