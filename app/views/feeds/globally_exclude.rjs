if current_user.globally_excluded?(@feed)
  page[@feed.dom_id("always_include")].removeClassName "selected"
  page[@feed.dom_id("exclude")].removeClassName "selected"

  page[@feed.dom_id("always_include")].addClassName "disabled"
  page[@feed.dom_id("exclude")].addClassName "disabled"
else
  page[@feed.dom_id("always_include")].removeClassName "disabled"
  page[@feed.dom_id("exclude")].removeClassName "disabled"  
end