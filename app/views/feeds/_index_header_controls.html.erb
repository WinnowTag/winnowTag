<ul class="control_bar">
  <li><%= will_paginate(@presenter.feeds) %></li>
  <li><%= link_to "Add", new_feed_path %></li>
  <li><%= link_to "Import", import_feeds_path %></li>
  <li>
    Sort By:
    <%= sort_link "Title", 'feeds', :alias => 'title' %>,
  	<%= sort_link "Globally Exclude", 'feeds', :alias => 'globally_exclude' %>,
  	<%= sort_link "Items", 'feeds', :alias => 'item_count' %>,
  	<%= sort_link "Last Updated", 'feeds', :alias => 'updated_on' %>
  </li>
</ul>

<% form_tag(feeds_path, :method => :get) do -%>
  <%= search_field_tag "search_term", @presenter.search_term, :placeholder => "Search Feeds...", :clear => { :onclick => "window.location = '#{feeds_path}';" } %>
<% end -%>