<div id="invite_<%= invite.id %>" class="invite clearfix">
	<ul class="controls">
    <% unless invite.code? -%>
    <li><%= link_to t(:activate), activate_invite_path(invite), :class => :activate, :method => :put %></li>
    <li><%= link_to t(:edit), edit_invite_path(invite), :class => :edit %></li>
    <% end -%>
    <li><%= link_to t(:destroy), invite, :class => :destroy, :method => :delete, :confirm => t(:are_you_sure) %></li>
	</ul>
	
	<dl class="created clearfix">
	  <dt><%= t(:created) %></dt>
	  <dd><%= format_date(invite.created_at) %></dd>
    <dt><%= t(:email_address) %></dt>
    <dd><%= mail_to h(invite.email) %></dd>
	  <dt><%= t(:status) %></dt>
    <dd>
	  <% if invite.user -%>
	    <%= t(:invites_accepted) %> <%=h invite.user.login %>
	  <% elsif invite.code? -%>
	    <%= t(:invites_activated) %> <%=h invite.code %>
	  <% else -%>
	    <%= t(:invites_requested) %>
	  <% end -%>
	  </dd>
	</dl>

	<dl class="question clearfix">
	  <dt><%= t(:invites_question) %></dt>
	  <dd>
	    <% if invite.hear.blank? && invite.use.blank? -%>
	      <em><%= t(:invites_no_answers) %></em>
	    <% else -%>
    	  <% unless invite.hear.blank? -%>
          <strong><%= t(:invites_how_did_you_hear) %></strong><br />
          <%=h invite.hear %><br />
          <br />
        <% end -%>
    	  <% unless invite.use.blank? -%>
          <strong><%= t(:invites_how_do_you_want_to_use_winnow) %></strong><br />
          <%=h invite.use %><br />
        <% end -%>
      <% end -%>
    </dd>
	</dl>
	
	<dl class="email clearfix">
	  <dt><%= t(:email) %></dt>
	  <dd>
    <% unless invite.subject.blank? -%>
      <strong><%= t(:invites_subject_label) %></strong><br />
      <%=h invite.subject %><br />
      <br />
    <% end -%>
    <% unless invite.body.blank? -%>
      <strong><%= t(:invites_body_label) %></strong><br /> 
      <%=h invite.body %><br />
    <% end -%>
    </dd>
	</dl>
</div>