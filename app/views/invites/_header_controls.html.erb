<% form_tag invites_path, :id => "text_filter_form", :onsubmit => "return false" do -%>
  <%= search_field_tag "text_filter", params[:text_filter], :placeholder => t(:invites_search_placeholder) %>
<% end -%>

<div class="order clearfix">
  <label><%= t(:sort_label) %></label>        
  <select id="order">
    <option value="created"><%= t(:created) %></option>
    <option value="email"><%= t(:email) %></option>
    <option value="status"><%= t(:status) %></option>
  </select>
  <%= direction_link %>
</div>
