<% content_for :head do -%>
  <% javascript_tag do -%>
    var itemBrowser;
    document.observe('dom:loaded', function() {
      Content.setup();
      itemBrowser = new ItemBrowser('invites', 'content', { orders: {
        asc:       ["email", "status"],
        desc:      ["created"],
        "default": "created"
      }});
    });
  <% end -%>
<% end -%>

<% content_for :header_controls do -%>
  <%= render :partial => 'header_controls' %>
<% end -%>
