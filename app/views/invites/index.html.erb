<% content_for :header_controls do -%>
  <ul class="control_bar">
    <li><%= will_paginate(@invites) %></li>
    <li><%= link_to 'Create Invite', new_invite_path, :class => "add" %></li>
    <% if params[:action] == "index" -%>
    <li>
      Sort By:
      <%= sort_link "Created", 'invites', :alias => 'created_at' %>,      
      <%= sort_link "Email", 'invites', :alias => 'email' %>,        
      <%= sort_link "Status", 'invites', :alias => 'status' %>
    </li>
    <% end -%>
  </ul>

  <% form_tag(invites_path, :method => :get) do -%>
	  <%= search_field_tag "q", params[:q], :placeholder => "Search Invites...", :clear => { :onclick => "window.location = '#{invites_path}'" } %>
  <% end -%>
<% end -%>

<% if @invites.empty? -%>
  <div class="empty">No users matched your search criteria.</div>
<% else -%>
  <%= render :partial => 'invite', :collection => @invites %>
<% end -%>