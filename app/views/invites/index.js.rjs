page.call 'itemBrowser.hideLoadingIndicator'

page.call "itemBrowser.setTotalItems", @invites_count

@invites.each_with_index do |invite, index|
  page.call 'itemBrowser.insertItem', dom_id(invite), params[:offset].to_i + index, 
    render_to_string(:partial => 'invite.html.erb', :locals => {:invite => invite})
end
